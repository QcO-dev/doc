{
   "extends": [
	  "eslint:recommended"
	],
  	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module"
  	},

  	"env": {
		"es6": true,
		"node": true
  	},
  	"rules": {
		"indent": [1, "tab", {"SwitchCase": 1}],
		"semi": [2, "always"],
		"no-unused-vars": ["error", { "vars": "all", "args": "none" }]
  	}
}